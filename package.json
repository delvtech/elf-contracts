{
  "name": "elf-contracts",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "solhint": "npx solhint -f table contracts/**/*.sol contracts/**/**/*.sol",
    "style-check": "npx prettier --check .",
    "prettier": "npx prettier --write .",
    "build": "npx hardhat compile",
    "test": "npx hardhat test ./test/*.ts",
    "sim": "npx hardhat test ./test/simulation/*.ts",
    "coverage": "npx hardhat coverage --solcoverjs \".solcover.js\" --testfiles \"./test/*.ts\"",
    "test:quick": "npx hardhat test ./test/*.ts --no-compile"
  },
  "_moduleAliases": {
    "test": "./test",
    "typechain": "./typechain"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "contracts/**/*.sol": [
      "npx prettier --write"
    ],
    "./**/*.{js,ts,json,md}": [
      "eslint --fix",
      "npx prettier --write"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^5.0.0",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.25",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "cspell": "^5.2.3",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.0.32",
    "hardhat": "^2.1.1",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-typechain": "^0.3.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.58",
    "solhint": "^3.2.1",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.7.16",
    "ts-generator": "^0.1.1",
    "ts-node": "^9.1.1",
    "typechain": "^4.0.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^3.4.0",
    "module-alias": "^2.2.2"
  }
}
